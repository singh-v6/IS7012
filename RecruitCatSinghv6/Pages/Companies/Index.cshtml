@page
@model RecruitCatSinghv6.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Companies</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MinSal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MaxSal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].OptionalStartDate)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Industry)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OptionalStartDate)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.Industry.IndustryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
