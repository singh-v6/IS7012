@page
@model RecruitCatSinghv6.Pages.Companies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a new Company entry</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.CompanyName" class="control-label"></label>
                <input asp-for="Company.CompanyName" class="form-control" />
                <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Position" class="control-label"></label>
                <input asp-for="Company.Position" class="form-control" />
                <span asp-validation-for="Company.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MinSal" class="control-label"></label>
                <input asp-for="Company.MinSal" class="form-control" />
                <span asp-validation-for="Company.MinSal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MaxSal" class="control-label"></label>
                <input asp-for="Company.MaxSal" class="form-control" />
                <span asp-validation-for="Company.MaxSal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.OptionalStartDate" class="control-label"></label>
                <input asp-for="Company.OptionalStartDate" class="form-control" />
                <span asp-validation-for="Company.OptionalStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Location" class="control-label"></label>
                <textarea asp-for="Company.Location" class="form-control">  </textarea>
                <span asp-validation-for="Company.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.IndustryID" class="control-label"></label>
                <select asp-for="Company.IndustryID" class ="form-control" asp-items="ViewBag.IndustryID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
